{
  "info": {
    "name": "Airport Ride Pooling API",
    "description": "Complete API collection for Airport Ride Pooling Backend System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"phone\": \"+11234567890\",\n  \"password\": \"password123\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Update Preferences",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"detourTolerance\": 0.25,\n  \"maxWaitTime\": 15\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/preferences",
              "host": ["{{base_url}}"],
              "path": ["auth", "preferences"]
            }
          }
        }
      ]
    },
    {
      "name": "Rides",
      "item": [
        {
          "name": "Create Ride Request (Airport to Downtown)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": {\n    \"coordinates\": [-122.3789, 37.6213]\n  },\n  \"pickupAddress\": \"San Francisco International Airport\",\n  \"dropoffLocation\": {\n    \"coordinates\": [-122.4194, 37.7749]\n  },\n  \"dropoffAddress\": \"123 Market St, San Francisco, CA\",\n  \"passengers\": 2,\n  \"luggage\": 3,\n  \"detourTolerance\": 0.3\n}"
            },
            "url": {
              "raw": "{{base_url}}/rides/request",
              "host": ["{{base_url}}"],
              "path": ["rides", "request"]
            }
          }
        },
        {
          "name": "Get Price Estimate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": {\n    \"coordinates\": [-122.3789, 37.6213]\n  },\n  \"dropoffLocation\": {\n    \"coordinates\": [-122.4194, 37.7749]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/rides/price-estimate",
              "host": ["{{base_url}}"],
              "path": ["rides", "price-estimate"]
            }
          }
        },
        {
          "name": "Get Active Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rides/active",
              "host": ["{{base_url}}"],
              "path": ["rides", "active"]
            }
          }
        },
        {
          "name": "Get Ride Pool Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rides/pool/:poolId",
              "host": ["{{base_url}}"],
              "path": ["rides", "pool", ":poolId"]
            }
          }
        },
        {
          "name": "Get Ride History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rides/history?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["rides", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Cancel Ride",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rides/pool/:poolId",
              "host": ["{{base_url}}"],
              "path": ["rides", "pool", ":poolId"]
            }
          }
        },
        {
          "name": "Get Pool Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rides/stats",
              "host": ["{{base_url}}"],
              "path": ["rides", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["health"]
        }
      }
    }
  ]
}